<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:tizen="http://tizen.org/ns/widgets" id="http://moonfin.org/tizen" version="2.0.0" viewmodes="maximized">
    <!-- App Identity -->
    <tizen:application id="Moonfin000.moonfin" package="Moonfin000" required_version="4.0"/>
    <content src="index.html"/>
    <name>Moonfin</name>
    <description>A beautiful Jellyfin media client for Samsung Smart TVs. Stream your personal media library with hardware-accelerated playback, full remote control support, and seamless navigation.</description>
    <author email="contact@moonfin.org" href="https://github.com/nicknsy/moonfin-tizen">Moonfin Contributors</author>
    <license>MPL-2.0</license>
    
    <!-- Icons - Multiple sizes required for store -->
    <icon src="icon.png"/>
    
    <!-- Profile & Features -->
    <tizen:profile name="tv-samsung"/>
    <feature name="http://tizen.org/feature/screen.size.all"/>
    <feature name="http://tizen.org/feature/network.internet"/>
    
    <!-- Network Access -->
    <access origin="*" subdomains="true"/>
    
    <!-- Content Security Policy -->
    <tizen:content-security-policy>default-src * 'self' data: blob:; script-src * 'self' 'unsafe-inline' 'unsafe-eval'; style-src * 'self' 'unsafe-inline'; img-src * 'self' data: blob:; media-src * 'self' blob:; connect-src *;</tizen:content-security-policy>
    
    <!-- Privileges -->
    <tizen:privilege name="http://tizen.org/privilege/internet"/>
    <tizen:privilege name="http://tizen.org/privilege/network.public"/>
    <tizen:privilege name="http://tizen.org/privilege/tv.inputdevice"/>
    <tizen:privilege name="http://tizen.org/privilege/application.launch"/>
    <tizen:privilege name="http://tizen.org/privilege/productinfo"/>
    <tizen:privilege name="http://developer.samsung.com/privilege/avplay"/>
    <tizen:privilege name="http://developer.samsung.com/privilege/drmplay"/>
    <tizen:privilege name="http://developer.samsung.com/privilege/productinfo"/>
    
    <!-- Settings -->
    <tizen:setting screen-orientation="landscape" context-menu="enable" background-support="enable" encryption="disable" install-location="auto" hwkey-event="enable"/>
    
    <!-- Samsung Metadata -->
    <tizen:metadata key="http://samsung.com/tv/metadata/prelaunch.support" value="true"/>
    <tizen:metadata key="http://samsung.com/tv/metadata/devel.api.version" value="4.0"/>
</widget>
